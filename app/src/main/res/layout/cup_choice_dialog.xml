<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text="컵 선택"
        android:background="#fff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8E8D8D"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RadioGroup
            android:id="@+id/cup_rGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/disposal_cup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#1BB39C"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="일회용컵"
                android:textStyle="bold"
                android:checked="true"
                />
            <View
                android:background="#f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RadioButton
                android:id="@+id/mug_cup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#1BB39C"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:textStyle="bold"
                android:text="매장용컵" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8E8D8D"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개인컵을 이용한 메뉴 제공은"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="매장에서 주문 시 가능합니다."
                android:textColor="#000000"
                android:gravity="center" />

        </RadioGroup>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#191818"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cup_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="#ffffff"/>

        <Button
            android:id="@+id/cup_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="선택"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="@drawable/square"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#6E6C6C" />


    </LinearLayout>


</LinearLayout>